<!DOCTYPE html>
<html>
<head>
	<title>Message Board</title>
	<% include partials/header.ejs %>
</head>
<body>
	<% include partials/navbar.ejs %>
	<div class="container mt-3">
		<h1 class="text-center">Message Board</h1>
		<div class="d-flex justify-content-center">
			<form class="col-md-8 mb-3" action="/messageboard/new" method="post">
				<div class="form-group">
					<label for="message">Post a message</label>
					<textarea name="message" class="form-control rounded-0" rows="3" placeholder="Thank you for spending countless hours at the firehouse. Thank you for being so selfless that you do not even think twice when you run into a burning building."></textarea>
				</div>
				<div class="text-center">
					<button type="submit" class="btn btn-primary">Post</button>
					<a href="/" class="btn btn-danger">Back</a>
				</div>
			</form>
		</div>
		<div class="d-flex justify-content-center">
			<% messages.reverse().forEach(function(element) { %>
			<div class="message list-group-item col-md-8 mt-2 mb-2">
				<h1>From: <%= element.username %></h1>
				<p>Message: <%= element.message %></p>
			</div>
			<% }); %>
		</div>
	</div>
	<% include partials/footer.ejs %>
</body>
</html>
